<div class="container-fluid">
<div class="row d-flex justify-content-center">
<section class="form-section">
  <div class="container">
<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :name, class: 'control-label' %><br />
    <%= f.text_field :name, class: 'form-control road-field', :required => true %>
  </div>

  <div class="field">
  <%= f.label :address1, 'Address Line 1', class: 'control-label'  %><br />
    <%= f.text_field :address1, class: 'form-control road-field', :required => true %>
  </div>

  <div class="field">
  <%= f.label :address2, 'Address Line 2 (optional)', class: 'control-label'  %><br />
  <%= f.text_field :address2, class: 'form-control road-field' %>
</div>

<div class="field">
<%= f.label :address3, 'Town or City', class: 'control-label'  %><br />
  <%= f.text_field :address3, class: 'form-control road-field', :required => true %>
</div>

  <div class="field">
  <%= f.label :county, class: 'control-label' %><br />
  <%= f.text_field :county, class: 'form-control road-field', :required => true %>
</div>

<div class="field">
<%= f.label :phone, 'Phone number', class: 'control-label' %><br />
<%= f.text_field :phone, class: 'form-control road-field', :required => true %>
</div>

  <div class="field">
    <%= f.label :email, class: 'control-label' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control road-field', :required => true %>
  </div>

  <div class="field">
    <%= f.label :password, class: 'control-label' %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: 'form-control road-field' %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class: 'control-label' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control road-field' %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: 'btn btn-primary road-submit' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</section>
</div>
</div>

