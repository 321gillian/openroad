<div class="container-fluid">
<div class="row d-flex justify-content-center">
<section class="form-section">
  <div class="container">
<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  <div class="field">
    <%= f.label :name, class: 'control-label'  %><br />
    <%= f.text_field :name, class: "form-control road-field" %>
  </div>

  <div class="field">
    <%= f.label :address1, 'Address Line 1', class: 'control-label'  %><br />
    <%= f.text_field :address1, class: "form-control road-field" %>
  </div>

  <div class="field">
  <%= f.label :address2, 'Address Line 2', class: 'control-label'  %><br />
  <%= f.text_field :address2, class: "form-control road-field" %>
</div>

<div class="field">
  <%= f.label :address3, 'Town or City', class: 'control-label'  %><br />
  <%= f.text_field :address3, class: "form-control road-field" %>
</div>

  <div class="field">
  <%= f.label :county, 'County', class: 'control-label'  %><br />
  <%= f.text_field :county, class: "form-control road-field" %>
</div>

<div class="field">
<%= f.label :phone, 'Phone number', class: 'control-label'  %><br />
<%= f.text_field :phone, class: "form-control road-field" %>
</div>
  <div class="field">
    <%= f.label :email, class: 'control-label'  %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control road-field" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password, class: 'control-label' %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control road-field" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class: 'control-label'  %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control road-field" %>
  </div>

  <div class="field">
    <%= f.label :current_password, class: 'control-label'  %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "off", class: "form-control road-field" %>
  </div>

  <div class="actions">
    <%= f.submit "Update", class: 'btn btn-primary road-submit' %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-primary road-submit' %></p>

<%= link_to "Back", :back %>
</div>
</section>
</div>
</div>
