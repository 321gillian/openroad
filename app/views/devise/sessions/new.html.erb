
<div class="container-fluid">
<div class="row d-flex justify-content-center">
<section class="form-section">
  <div class="container">
<h2>Login or Sign up</h2>
<p class="form-subhead">Please enter your details to continue</p>
<p class="notice road-notice"><%= notice %></p>
 <p class="alert road-notice"><%= alert %></p>


<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <%= f.label :email, class: 'control-label' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control road-field' %>
  </div>

  <div class="form-group">
    <%= f.label :password, class: 'control-label'  %><br />
    <%= f.password_field :password, autocomplete: "off", class: 'form-control road-field' %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me, class: 'road-check' %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="form-gropu">
    <%= f.submit "Log in", class: 'btn btn-primary road-submit' %>
  </div>

<% end %>

<p class="form-subhead">Donâ€™t yet have an account?</p>
<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Sign up", new_registration_path(resource_name), class: 'btn btn-primary road-submit' %><br />
<% end -%>

<%= render "devise/shared/links" %>
</div>
</div>
</section>
</div>
<% if current_user %>
<a class="nav-link" href="/account">ACCOUNT</a>
<%= link_to 'LOGOUT', destroy_user_session_path, method: :delete,  class: "nav-link" %>
<% else %>
 <%= link_to 'LOGIN', new_user_session_path,  class: "nav-link" %>
<% end %></li>


